<% include ../partials/HEAD %>

    <!-- Show accounts page... User should be able to manage their pins here and change their account settings I guess? -->


    <div id='wrap'>
        <div id='main'>
            <div class='ui container' style="width: 50%; margin-top: 10%;">

              <div id='CIRCULAR_ICONS_ANIMATION'></div>

                <script>

                    
                  /* Now we need an array of our assets to set them with the attr*/
                  
                  let icons = [

                    '/assets/images/icons8-map-100.png',
                    '/assets/images/icons8-map-editing-64.png',
                    '/assets/images/icons8-map-marker-50.png',
                    '/assets/images/icons8-map-pin-100.png',
                    '/assets/images/icons8-people-100.png',
                    '/assets/images/icons8-people-48.png',
                    '/assets/images/icons8-pin-48.png',
                    '/assets/images/icons8-world-map-64.png',
                    '/assets/images/icons8-map-100.png',
                    '/assets/images/icons8-map-pin-100.png'
                  ];
                  /*get heights and width*/
                  let body = document.body,
                    html = document.documentElement;

                  let height = Math.max( body.scrollHeight, body.offsetHeight, html.clientHeight, html.scrollHeight, html.offsetHeight);
                  let width = Math.max( body.scrollWidth, body.offsetWidth, html.clientWidth, html.scrollWidth, html.offsetWidth);
                    
                  for(let i=0; i<10; i++) {
                    let el = document.getElementById('CIRCULAR_ICONS_ANIMATION').appendChild(document.createElement('img'));
                    el.style.position = 'absolute';
                    el.src = '';
                    el.setAttribute('id', i);
                     
                    el.className = 'circular_path';
                    el.style.left = (Math.random() * width) + 'px';
                    el.style.right = (Math.random() * width) + 'px';
                    el.style.top = (Math.random() * height) + 'px';
                    el.style.bottom = (Math.random() * height) + 'px';
                    
                    $(`#${i}`).attr('src', icons[i]);
                  };
                </script>

                <h1 class='ui dividing header' style="font-size: 3rem; font-family: 'Asap', sans-serif; font-weight: light;"> Hello, <%= currUser.first_name %> <%= currUser.last_name %>! </h1>
                <div class='row'>
                    <div class='col-12'>
                        <div class="ui simple dropdown item"> 
                            Manage my organizations
                            <i class="dropdown icon"></i> 
                            <div class="left menu">
                                <div class="item"> <a href="/home/account/<%= currUser._id%>/edit"> Edit my pins </a></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-12'>
                        <div class="ui simple dropdown item" style="font-size: 3rem; padding-top: 2.5rem;">
                            Manage my account
                            <i class="dropdown icon"></i>
                            <div class="left menu">
                                <div class="item"> manage account settings </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-12'>
                        <div class="ui simple dropdown item" style="font-size: 3rem; padding-top: 2.5rem;">
                            Feedback
                            <i class="dropdown icon"></i>
                            <div class="left menu">
                                <div class="item"> Give feedback here! </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

