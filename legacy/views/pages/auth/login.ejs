<% include ../../partials/HEAD %>

  <div id="wrap">
    <div id="main">
      <div class="ui container">
        <form  id="sign_in_form" class="ui big form" method="POST" action="/auth/login">
            
            <div id="sign_in_header" class="ui huge header"> Sign in </div>
          <div class="field"> 
            <label for="email">Email address</label>
            <input id="email" name="email" type="email" class="form-control"/>
          </div>
          <div class="field">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" class="form-control"/>
          </div>  

          <button type="submit" class="fluid circular ui small button" style="background-color: rgb(162,42,42); color: white; font-family: "Asap", sans-serif;"> Sign in </button> 

          <div id="sign_in_form_divider" class="ui horizontal divider"> Or </div> 

          <div class="ui tiny secondary segment">
              Don't have an account? <a id="sign_in_anchor" href="/auth/signup"> Sign up </a>
          </div>
        </form>

        <!-- Begin form validation -->
          <script>
              let validationRules = {
                  email: {
                      identifier: 'email',
                      rules: [
                          {
                              type: 'empty',
                              prompt: 'Please enter an email address'
                          }
                      ]
                  },
                  password: {
                      identifier: 'password',
                      rules: [
                          {
                              type: 'empty',
                              prompt: 'Please enter a password'
                          }
                      ]
                  }
              };
              $('.ui.form')
                  .form({
                      fields: validationRules,
                      inline: 'true',
                      on: 'blur'
                  })
              ;
          </script>
          <!-- End form validation -->
        </div>
      </div>
    </div>
 </div>

<% include ../../partials/FOOT %>
